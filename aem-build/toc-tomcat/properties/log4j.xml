<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="true" threshold="null">

    <!-- Console Appender -->
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="${log4jproperties.CommonConversionPattern}\t%c{3}\t%m%n" />
        </layout>
        <param name="Threshold" value="WARN"/>      
    </appender>
    
    <appender name="TRACE_TOC" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${catalina.base}/logs/traceToc.log" />
        <param name="DateFormat" value="yyyyMMdd" />
        <param name="HeaderDateFormat" value="yyyy-MM-dd HH:mm:ss" />
        <param name="Header" value="CTO TOC Log file\n" />
        <param name="MaxFileSizeBeforeRoll" value="100000000" />
        <!-- specify the layout -->
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="***LogEntry*** %d{yyyy-MM-dd HH:mm:ss}\t%c{2}\t%p\t%m%n" />
            <!-- <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss}\t%c{2}\t%p\t%x\t%m%n" /> -->
        </layout>
    </appender>

    <!-- CTO TCO logger -->
    <logger name="com.siemens.cto" additivity="false">
        <level value="INFO" />
        <appender-ref ref="TRACE_TOC" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- CTO TCO logger -->
    <logger name="com.atomikos" additivity="false">
        <level value="WARN" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- CTO TCO logger -->
    <logger name="org.springframework" additivity="false">
        <level value="WARN" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- The root logger -->
    <root>
        <level value="INFO" />
        <appender-ref ref="CONSOLE" />
    </root>
</log4j:configuration>

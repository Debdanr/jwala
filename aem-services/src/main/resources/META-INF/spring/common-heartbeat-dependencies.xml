<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="httpRequestFactory" class="org.springframework.http.client.SimpleClientHttpRequestFactory">
        <property name="connectTimeout" value="1000"/>
        <property name="readTimeout" value="1000"/>
    </bean>

    <bean id="exceptionUtilHelper" class="com.siemens.cto.aem.common.exception.ExceptionUtil" factory-method="valueOf">
        <constructor-arg value="INSTANCE"/>
    </bean>

    <bean id="jvmServiceExistence" class="com.siemens.cto.aem.control.jvm.command.impl.JvmServiceExistenceFacade"/>

    <bean id="webServerServiceExistence" class="com.siemens.cto.aem.control.webserver.command.impl.WebServerServiceExistenceFacade"/>

</beans>
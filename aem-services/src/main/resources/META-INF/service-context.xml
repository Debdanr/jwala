<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <import resource="classpath:META-INF/transaction-context.xml"/>

    <bean id="groupDao" class="com.siemens.cto.aem.persistence.dao.GroupDaoJpa"/>

    <bean id="jvmDao" class="com.siemens.cto.aem.persistence.dao.JvmDaoJpa"/>
    <bean id="jvmInfoService" class="com.siemens.cto.aem.service.JvmInfoServiceImpl">
        <constructor-arg>
            <ref bean="groupDao"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="jvmDao"/>
        </constructor-arg>
    </bean>

    <bean id="groupService" class="com.siemens.cto.aem.service.group.impl.GroupServiceImpl">
        <constructor-arg>
            <bean id="groupServiceDao" class="com.siemens.cto.aem.persistence.dao.group.impl.springjdbc.SpringJdbcGroupDaoImpl">
                <constructor-arg ref="dataSource"/>
            </bean>
        </constructor-arg>
        <constructor-arg>
            <ref bean="jvmService"/>
        </constructor-arg>
    </bean>

    <bean id="jvmService" class="com.siemens.cto.aem.service.jvm.impl.JvmServiceImpl">
        <constructor-arg>
            <bean id="jvmServiceDao" class="com.siemens.cto.aem.persistence.dao.jvm.impl.jpa.JpaJvmDaoImpl"/>
        </constructor-arg>
    </bean>
</beans>
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <import resource="classpath:META-INF/transaction-context.xml"/>
    <import resource="classpath*:META-INF/persistence-context.xml"/>
    <import resource="classpath*:META-INF/dao-context.xml"/>
    <import resource="classpath*:META-INF/datasource-context.xml"/>

    <bean id="jvmInfoService" class="com.siemens.cto.aem.service.JvmInfoServiceImpl">
        <constructor-arg>
            <ref bean="groupDao"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="jvmDao"/>
        </constructor-arg>
    </bean>

    <bean id="groupService" class="com.siemens.cto.aem.service.group.impl.GroupServiceImpl">
        <constructor-arg>
            <ref bean="alternateGroupDao"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="jvmService"/>
        </constructor-arg>
    </bean>

    <bean id="jvmService" class="com.siemens.cto.aem.service.jvm.impl.JvmServiceImpl">
        <constructor-arg>
            <ref bean="alternateJvmDao"/>
        </constructor-arg>
    </bean>

    <bean id="webServerService" class="com.siemens.cto.aem.service.webserver.impl.WebServerServiceImpl">
        <constructor-arg>
            <ref bean="webServerDao"/>
        </constructor-arg>
    </bean>
</beans>
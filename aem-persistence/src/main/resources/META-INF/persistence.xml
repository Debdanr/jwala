<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="aem-unit" transaction-type="RESOURCE_LOCAL">
        <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
        <jta-data-source>jdbc/AemXaDs</jta-data-source>
        <non-jta-data-source>jdbc/AemDs</non-jta-data-source>

        <class>com.siemens.cto.aem.persistence.domain.AbstractEntity</class>
        <class>com.siemens.cto.aem.persistence.domain.Group</class>
        <!-- class>com.siemens.cto.aem.persistence.domain.Jvm</class -->
        <!-- class>com.siemens.cto.aem.persistence.domain.Environment</class> <class>com.siemens.cto.aem.persistence.domain.Event</class> <class>com.siemens.cto.aem.persistence.domain.Server</class> 
            <class>com.siemens.cto.aem.persistence.domain.ServerExecuteState</class -->
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="openjpa.ConnectionFactoryProperties" value="PrintParameters=true" />
            <property name="openjpa.jdbc.SynchronizeMappings" value="false" />
            <property name="openjpa.Log" value="DefaultLevel=WARN, Tool=INFO" />
            <!-- Use this to view SQL prepared statements -->
            <!--<property name="openjpa.Log" value="File=c:/temp/aem.db.trace.log, DefaultLevel=WARN, Tool=INFO, SQL=TRACE, RUNTIME=TRACE"/> -->
            <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)" />
        </properties>
    </persistence-unit>
</persistence>

<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="jpaVendorAdapter" class="org.springframework.orm.jpa.vendor.OpenJpaVendorAdapter"/>

    <bean id="entityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="persistenceXmlLocation" value="classpath:META-INF/persistence.xml"/>
        <property name="dataSource">
	        <ref bean="dataSource"/>
        </property>
        <property name="jpaVendorAdapter">
            <ref bean="jpaVendorAdapter"/>
        </property>
        <property name="jpaProperties">
            <props>
                <prop key="org.apache.openjpa.jdbc.sql.DBDictionary">
                    org.apache.openjpa.jdbc.sql.H2Dictionary
                </prop>
            </props>
        </property>
    </bean>

</beans>